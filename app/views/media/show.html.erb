<%- model_class = Medium -%>
<div class="page-header">
  <h1>Files</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:folder_id) %>:</strong></dt>
  <dd><%= @medium.folder_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:file_file_name) %>:</strong></dt>
  <dd><%= @medium.file_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:file_content_type) %>:</strong></dt>
  <dd><%= @medium.file_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:file_file_size) %>:</strong></dt>
  <dd><%= @medium.file_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:file_updated_at) %>:</strong></dt>
  <dd><%= @medium.file_updated_at %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              media_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_medium_path(@medium), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              medium_path(@medium),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
